# Sepolia Testnet Configuration for Security Testing
# Copy this to .env for Sepolia testing

# Server Configuration
PORT=3001
NODE_ENV=development

# Databases
# PostgreSQL (primary database)
DATABASE_URL=postgresql://abunfi_user:abunfi_password@localhost:5432/abunfi_sepolia
DATABASE_TEST_URL=postgresql://abunfi_user:abunfi_password@localhost:5432/abunfi_sepolia_test

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your_super_secret_jwt_key_here_sepolia
JWT_EXPIRE=7d

# Sepolia Blockchain Configuration
RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
CHAIN_ID=11155111
PRIVATE_KEY=your_private_key_here

# Contract Addresses (Update these after deployment)
# Core contracts
VAULT_CONTRACT_ADDRESS=0x...
STRATEGY_MANAGER_ADDRESS=0x...

# Strategy contracts (Not needed for security testing)
AAVE_STRATEGY_ADDRESS=0x...
COMPOUND_STRATEGY_ADDRESS=0x...
LIQUID_STAKING_STRATEGY_ADDRESS=0x...
LIQUIDITY_PROVIDING_STRATEGY_ADDRESS=0x...
UNISWAP_V4_FAIRFLOW_STRATEGY_ADDRESS=0x...

# EIP-7702 Gasless Transaction contracts (Security Testing)
SMART_ACCOUNT_ADDRESS=0x...
EIP7702_BUNDLER_ADDRESS=0x...
EIP7702_PAYMASTER_ADDRESS=0x...

# Token contracts
USDC_CONTRACT_ADDRESS=0x...

# External APIs
COINGECKO_API_URL=https://api.coingecko.com/api/v3
EXCHANGE_RATE_API_URL=https://api.exchangerate-api.com/v4/latest/USD

# Rate Limiting for Security Testing
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Testing Configuration
ENABLE_SECURITY_TESTING=true
SECURITY_TEST_MODE=true

# Test Accounts (Update these after deployment)
TEST_WHITELISTED_ACCOUNT=0x...
TEST_RESTRICTED_ACCOUNT=0x...
TEST_STANDARD_ACCOUNTS=0x...,0x...,0x...

# Rate Limiting Configuration for Testing
DEFAULT_DAILY_GAS_LIMIT=100000000000000000  # 0.1 ETH in wei
WHITELISTED_DAILY_GAS_LIMIT=200000000000000000  # 0.2 ETH in wei
DEFAULT_PER_TX_GAS_LIMIT=10000000000000000  # 0.01 ETH in wei
WHITELISTED_PER_TX_GAS_LIMIT=20000000000000000  # 0.02 ETH in wei
DEFAULT_DAILY_TX_LIMIT=50
WHITELISTED_DAILY_TX_LIMIT=100

# WebSocket Configuration for Real-time Monitoring
ENABLE_WEBSOCKET=true
WS_PORT=3002

# Logging
LOG_LEVEL=debug
ENABLE_SECURITY_LOGGING=true

# CORS
CORS_ORIGIN=http://localhost:3000

# Security Service Configuration
SECURITY_CACHE_TTL=30000  # 30 seconds
SECURITY_MONITORING_INTERVAL=60000  # 1 minute
ENABLE_REAL_TIME_SECURITY_MONITORING=true

# Mock Configuration for Testing
USE_MOCK_SECURITY_DATA=false  # Set to true if contracts not deployed
MOCK_SECURITY_RESPONSES=false
